<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="CartDAO">
  	
  	<!-- 장바구니등록 -->
  	<insert id="insertCart">
  		insert into cart(cno,ino,u_id,pno,main_img1,pname,price,dis_price,c_cnt)
  		values(#{cno},#{ino, jdbcType=INTEGER},#{u_id},#{pno},#{main_img1},#{pname},#{price},
  		#{dis_price, jdbcType=INTEGER},#{c_cnt}) 
  	</insert>  	
  	
  	<!-- 장바구니 확인 -->
  	<select id="selectCartList" resultType="com.ezen.biz.dto.CartVO">
  		select u_id,main_img1,pname,price,dis_price,c_cnt from cart
  		where u_id=#{u_id} 
  	</select>
  	
</mapper>