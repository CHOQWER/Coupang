<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="ProductDAO" >
  	
  	<!-- 제품 등록 -->
	<insert id="insertProduct">
  		insert into product(pno,u_id,ca_no,sca_no,company,pname,price,dis_price,content,color,qty) 
  		values(seq_product.nextval,#{u_id},#{ca_no},#{sca_no,jdbcType=INTEGER},#{company},#{pname},#{price}
  		,#{dis_price,jdbcType=INTEGER},#{content,jdbcType=NVARCHAR},#{color,jdbcType=NVARCHAR},#{qty,jdbcType=INTEGER})
  	</insert>
  	
  	<!-- 제품 수정 -->
	<update id="updateProduct">
  		update product set u_id=#{u_id,jdbcType=NVARCHAR},ca_no=#{ca_no,jdbcType=INTEGER},sca_no=#{sca_no,jdbcType=INTEGER}
  		,company=#{company},pname=#{pname},price=#{price},dis_price=#{dis_price,jdbcType=INTEGER},content=#{content,jdbcType=NVARCHAR},
  		color=#{color,jdbcType=NVARCHAR},qty=#{qty,jdbcType=INTEGER} where pno=#{pno}
  	</update>
  	
  	<!-- 제품 삭제 -->
  	<delete id="deleteProduct">
  		delete from product where pno=#{pno}
  	</delete>
  	
  	<!-- 전체 상품 목록 조회 -->
  	<select id="selectProductList" resultType="product">
  		select * from product
  	</select>
  	
  	<!-- pno로 상품정보 조회 -->
  	<select id="selectProductListPno" resultType="product">
  		SELECT (pno, u_id, ca_no, sca_no, company, pname, price, dis_price, content, color, qty, p_regdate,disp)
		FROM product where pno=#{pno}
  	</select>
  	
  	
  	<!-- 카테고리별 제품 리스트 -->
  	<select id="ProductListCate" parameterType="criteria"
		resultType="product">
		select * from (
		select rownum rn, A.* from
		(select
			main_img1,sca_no,pname,price,dis_price from product p, images i
				where 1=1
					and p.pno=i.pno and sca_no=#{sca_no}) A
		<![CDATA[
  		 	where rownum<=#{pageNum}*#{rowsPerPage}
  		 	) where rn>=#{pageNum}*#{rowsPerPage}-#{rowsPerPage}+1
  		]]>
  	</select>
  	
  	<!-- 메인 카테고리 목록 -->
  	<select id="getCategory" resultType="maincate">
		SELECT * FROM maincate where disp='y'order by dispseq
	</select>
  	
  	<!-- 서브 카테고리 목록 -->
  	<select id="getSubCategory" resultType="subcate">
		SELECT * FROM subcate
		WHERE ca_no=#{ca_no} and disp='y'
		order by dispseq
	</select>
	
	<!-- 서브 카테고리 전체 행의 갯수 (폐이징에 필요) -->
	<select id="selectRowCount" resultType="java.lang.Integer">
		select count(*) from
		product where sca_no=#{sca_no} and disp='y' 
	</select>
  	
  	
  	
  	
  	
  	
  	
  	
  	
  	
  	
  	
  </mapper>